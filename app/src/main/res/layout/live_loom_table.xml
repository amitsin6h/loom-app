<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="25px"
    android:layout_marginRight="25px">

<android.support.v7.widget.CardView
    android:layout_marginTop="50px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="20px"
            android:paddingLeft="40px"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Employee Name"
            android:id="@+id/tvempname"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/tvEmpName"
            android:paddingTop="20px"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/tvempname"
            android:layout_height="wrap_content"
            android:text="Test"/>


        <TextView
            android:paddingTop="20px"
            android:paddingLeft="40px"
            android:layout_width="150dp"
            android:layout_below="@id/tvempname"
            android:layout_height="wrap_content"
            android:text="Entry Date"
            android:id="@+id/tved"
            android:textAllCaps="true"/>

        <TextView
            android:paddingTop="20px"
            android:id="@+id/tvEntryDate"
            android:layout_width="match_parent"
            android:layout_below="@id/tvempname"
            android:layout_toRightOf="@+id/tved"
            android:layout_height="wrap_content"
            android:text="Test"/>


        <TextView
            android:paddingTop="20px"
            android:paddingLeft="40px"
            android:layout_below="@+id/tved"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Shift"
            android:id="@+id/tvshift"
            android:textAllCaps="true"/>

        <TextView
            android:paddingTop="20px"
            android:layout_width="match_parent"
            android:layout_below="@+id/tved"
            android:layout_toRightOf="@+id/tvshift"
            android:id="@+id/tvShift"
            android:layout_height="wrap_content"
            android:text="Test"/>


        <TextView
            android:paddingBottom="20px"
            android:paddingTop="20px"
            android:paddingLeft="40px"
            android:layout_below="@+id/tvshift"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Loom No"
            android:id="@+id/tvloom"
            android:textAllCaps="true"/>

        <TextView
            android:paddingBottom="20px"
            android:paddingTop="20px"
            android:id="@+id/tvLoomNo"
            android:layout_width="match_parent"
            android:layout_below="@id/tvshift"
            android:layout_toRightOf="@+id/tvloom"
            android:layout_height="wrap_content"
            android:text="Test"/>





    </RelativeLayout>



</android.support.v7.widget.CardView>


</LinearLayout>
